
## <summary>policy for iwd</summary>

########################################
## <summary>
##	Execute iwd_exec_t in the iwd domain.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`iwd_domtrans',`
	gen_require(`
		type iwd_t, iwd_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, iwd_exec_t, iwd_t)
')

######################################
## <summary>
##	Execute iwd in the caller domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`iwd_exec',`
	gen_require(`
		type iwd_exec_t;
	')

	corecmd_search_bin($1)
	can_exec($1, iwd_exec_t)
')

