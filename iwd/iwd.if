########################################
## <summary>
##	All of the rules required to administrate
##	an iwd environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`iwd_admin',`
	gen_require(`
		type iwd_t;
		type iwd_var_lib_t;
		type iwd_var_run_t;
	')

	allow $1 iwd_t:process { signal_perms };
	allow $1 iwd_t:dbus { send_msg };
	ps_process_pattern($1, iwd_t)

    tunable_policy(`deny_ptrace',`',`
        allow $1 iwd_t:process ptrace;
    ')

	files_search_var_lib($1)
	admin_pattern($1, iwd_var_lib_t)

	files_search_pids($1)
	admin_pattern($1, iwd_var_run_t)
	optional_policy(`
		systemd_passwd_agent_exec($1)
		systemd_read_fifo_file_passwd_run($1)
	')
')

interface(`iwd_read_hwdb',`
	gen_require(`
		type systemd_hwdb_t;
		type sysctl_net_t;
	')
	allow iwd_t systemd_hwdb_t:file { read open getattr map };
')

########################################
## <summary>
##      Allow the specified domain unconfined accesses to manage network 
##      with iwd console
## </summary>
## <param name="domain">
##      <summary>
##      Domain allowed access.
##      </summary>
## </param>
#
interface(`iwd_unconfined',`
       	gen_require(`
               	attribute iwd_unconfined_type;
        ')

        typeattribute $1 iwd_unconfined_type;
')
