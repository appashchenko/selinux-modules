########################################
## <summary>
##	All of the rules required to administrate
##	an connman environment
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
## <param name="role">
##	<summary>
##	Role allowed access.
##	</summary>
## </param>
## <rolecap/>
#
interface(`connman_admin',`
	gen_require(`
		type connman_t;
		type connman_var_lib_t;
		type connman_var_run_t;
	')

	allow $1 connman_t:process { signal_perms };
	ps_process_pattern($1, connman_t)

    tunable_policy(`deny_ptrace',`',`
        allow $1 connman_t:process ptrace;
    ')

	files_search_var_lib($1)
	admin_pattern($1, connman_var_lib_t)

	files_search_pids($1)
	admin_pattern($1, connman_var_run_t)
	optional_policy(`
		systemd_passwd_agent_exec($1)
		systemd_read_fifo_file_passwd_run($1)
	')
')

########################################
## <summary>
##      Send and receive messages from
##      connman over dbus.
## </summary>
## <param name="domain">
##      <summary>
##      Domain allowed access.
##      </summary>
## </param>
#
interface(`connman_dbus_chat',`
        gen_require(`
		type connman_t;
		class dbus send_msg;
	')

	allow $1 connman_t:dbus send_msg;
	allow connman_t $1:dbus send_msg;
')

########################################
## <summary>
##      Allow the specified domain unconfined accesses to manage network 
##      with connman console
## </summary>
## <param name="domain">
##      <summary>
##      Domain allowed access.
##      </summary>
## </param>
#
interface(`connman_unconfined',`
        gen_require(`
                attribute connman_unconfined_type;
        ')

        typeattribute $1 connman_unconfined_type;
')
