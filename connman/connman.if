
## <summary>policy for connman</summary>

########################################
## <summary>
##	Execute connman_exec_t in the connman domain.
## </summary>
## <param name="domain">
## <summary>
##	Domain allowed to transition.
## </summary>
## </param>
#
interface(`connman_domtrans',`
	gen_require(`
		type connman_t, connman_exec_t;
	')

	corecmd_search_bin($1)
	domtrans_pattern($1, connman_exec_t, connman_t)
')

######################################
## <summary>
##	Execute connman in the caller domain.
## </summary>
## <param name="domain">
##	<summary>
##	Domain allowed access.
##	</summary>
## </param>
#
interface(`connman_exec',`
	gen_require(`
		type connman_exec_t;
	')

	corecmd_search_bin($1)
	can_exec($1, connman_exec_t)
')

